# Configuración de Sttcast Web Interface
# Copiar este archivo a .env/webif.env y ajustar los valores

# Servidor web
WEBIF_HOST=127.0.0.1
WEBIF_PORT=8080
WEBIF_DEBUG=false

# Usuario administrador inicial
WEBIF_ADMIN_NAME=admin
WEBIF_ADMIN_PASSWORD=admin123
WEBIF_ADMIN_EMAIL=admin@example.com

# Base de datos PostgreSQL
WEBIF_DB_HOST=localhost
WEBIF_DB_PORT=5432
WEBIF_DB_USER=sttcast
WEBIF_DB_PASSWORD=
WEBIF_DB_NAME=sttcast_webif

# Servidor de transcripción
TRANSSRV_HOST=127.0.0.1
TRANSSRV_PORT=8000
TRANSSRV_API_KEY=your-api-key-here

# Sesión
WEBIF_SECRET_KEY=change-this-to-a-random-secret-key
WEBIF_SESSION_EXPIRE=480

# Almacenamiento
WEBIF_UPLOAD_DIR=/tmp/sttcast_webif/uploads
WEBIF_RESULTS_DIR=/tmp/sttcast_webif/results
WEBIF_MAX_UPLOAD_SIZE=524288000
